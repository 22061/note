#include <WiFi.h>
#include <WiFiUdp.h>

String wifi_name = "mcuServer";    // SSID
String wifi_pass = "mcu64205";  // password

WiFiUDP udp;
IPAddress wifi_ip(192, 168, 4, 1);  
int remote_port = 64203;           
int local_port = 64205;             

void setup() {
  Serial.begin(115200);

  WiFi.begin(wifi_name, wifi_pass);
  udp.begin(local_port);
}

void loop()
{
  udp.beginPacket(wifi_ip, remote_port);
  udp.print("test data"); 
  udp.endPacket();

  delay(500);
}
